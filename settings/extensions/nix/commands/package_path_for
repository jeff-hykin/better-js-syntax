#!/usr/bin/env -S deno run --no-lock --allow-all
try {
    console.log(JSON.parse(Deno.readTextFileSync(Deno.env.get("__FORNIX_NIX_PATH_EXPORT_FILE"))).packagePathFor[Deno.args[0]])
} catch (error) {
    console.error("")
    console.error("there was an issue when calling:")
    console.error(`    nix package_path_for ${Deno.args[0]}`)
    console.error(`it is possible that package doesnt exist inside of this file: ${Deno.env.get("__FORNIX_NIX_PATH_EXPORT_FILE")||"$__FORNIX_NIX_PATH_EXPORT_FILE"}`)
    console.error("(which is autogenerated based on system_tools.toml)")
    console.error("")
}